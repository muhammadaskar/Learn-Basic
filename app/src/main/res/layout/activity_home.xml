<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/power"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:onClick="clickExit"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_gravity="center"
        android:text="Good Day"
        android:fontFamily="sans-serif-thin"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:text="KI KD"
            android:fontFamily="sans-serif-thin"
            android:layout_marginRight="4dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:onClick="clickKI"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:text="Tujuan"
            android:fontFamily="sans-serif-thin"
            android:layout_marginLeft="8dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:onClick="clickTujuan"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:text="materi"
            android:fontFamily="sans-serif-thin"
            android:layout_marginRight="4dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:onClick="clickMateri"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:text="SOAL"
            android:fontFamily="sans-serif-thin"
            android:layout_marginLeft="8dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:onClick="clickSoal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center">


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:text="permainan"
            android:fontFamily="sans-serif-thin"
            android:layout_marginRight="4dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:onClick="clickPermainan"/>

        <Button
            android:id="@+id/btnTentang"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:text="tentang"
            android:fontFamily="sans-serif-thin"
            android:layout_marginLeft="8dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:onClick="clickTentang"/>

    </LinearLayout>

</LinearLayout>